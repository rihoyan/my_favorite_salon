<div class="container">
  <h3 class="title my-4 text-center">＼　　　基本情報変更　　　／</h3>

  <div class="form mx-auto" style="width: 700px;">
  <%= form_with model: @customer, url: customers_path, local: true do |f| %>

    <div class="form_group row mt-3">
      <%= f.label :nickname, "ニックネーム", class: "col-lg-4" %>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "col-lg-4 form-control" %>
    </div>
    
    <div class="form_group row mt-3">
      <%= f.label :profile_image,"プロフィール画像", class: "col-lg-4" %>
      <%= f.attachment_field :profile_image %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :last_name, "名前", class: "col-lg-4" %>
      <%= f.text_field :last_name, autocomplete: "last_name",placeholder: "性", class: "col-lg-4 form-control" %>
      <%= f.text_field :first_name, autocomplete: "first_name",placeholder: "名", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :last_name_kana,"フリガナ", class: "col-lg-4" %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana",placeholder:"セイ", class: "col-lg-4 form-control" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana",placeholder: "メイ", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :telephone_number,"電話番号", class: "col-lg-4" %>
      <%= f.text_field :telephone_number, autocomplete: "telephone_number",placeholder: "09099994838", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :email, "メールアドレス", class: "col-lg-4" %>
      <%= f.email_field :email, autocomplete: "email", class: "col-lg-4 form-control" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "更新", class: "form-control btn btn-outline-dark" %>
    </div>
  <% end %>

  <div class="destroy mt-3">
    <%= link_to "退会する", customers_destroy_path, class: "btn btn-dark" %>
  </div>
  <%= link_to "戻る", :back %>

</div>