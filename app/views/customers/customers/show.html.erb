<div class="container">
  <div class="row mt-3">

    <div class="col-lg-5 ml-1">
      <h4><%= @customer.nickname %>さん、こんにちは！</h4></br>
      <div class="profile_image_plus">
        <%= attachment_image_tag @customer, :profile_image, size:"300x300", fallback: "woman.png", class: "border border-secondary rounded-circle" %>
          <div>
            <%= link_to "画像変更",customers_prf_image_path, class: "btn btn-outline-dark" %>
          </div>
      </div>
    </div>

    <div class="col-lg-6 mt-5">
        <%= link_to step1_reservations_path, class: "w-100 -flex btn btn-outline-dark btn-mypage" do %>
          <i class="fas fa-star fa-lg"> 予約する</i>
        <% end %>
        <%= link_to favorites_index_path, class: "w-100 mt-2 btn btn-outline-dark btn-mypage" do %>
          <i class="far fa-bookmark fa-lg"> My 美容院</i>
        <% end %>
        <%= link_to  reservations_path,class: "w-100 mt-2 btn btn-outline-dark btn-mypage" do%>
          <i class="fas fa-history fa-lg"> 予約履歴</i>
        <% end %>
        <%= link_to customers_likes_path,class: "w-100 mt-2 btn btn-outline-dark btn-mypage" do %>
          <i class="fas fa-heart fa-lg"> favorite style</i>
        <% end %>
        <%= link_to edit_customers_path, class: "w-100 mt-2 btn btn-outline-dark btn-mypage" do %>
          <i class="fas fa-exchange-alt fa-lg"> 基本情報変更</i>
        <% end %>
    </div>
  </div>
</div>
