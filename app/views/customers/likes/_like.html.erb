<% if image.liked_by?(current_customer) %>
   <%= link_to customers_image_add_path(image), method: :delete do %>
       <i class="fas fa-heart fa-5x liked"></i>
   <% end %>
<% else %>
   <%= link_to customers_image_add_path(image), method: :post do %>
       <i class="far fa-heart fa-5x not-like"></i>
   <% end %>
<% end %>