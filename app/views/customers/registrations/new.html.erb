<div class="container">
  <h3 class="title my-4 text-center">＼　　　まずは登録　　　／</h3>

  <div class="form mx-auto" style="width: 700px;">
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form_group row mt-3">
        <%= f.label :last_name, "名前", class: "col-lg-4" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "性", class: "col-lg-4 form-control" %>
        <%= f.text_field :first_name, autocomplete: "first_name",placeholder: "名", class: "col-lg-4 form-control" %>
      </div>

      <div class="form_group row mt-3">
        <%= f.label :last_name_kana,"フリガナ", class: "col-lg-4" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana",placeholder:"セイ", class: "col-lg-4 form-control" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana",placeholder: "メイ", class: "col-lg-4 form-control" %>
      </div>

      <div class="form_group row mt-3">
        <%= f.label :nickname, "ニックネーム", class: "col-lg-4" %>
        <%= f.text_field :nickname, autocomplete: "nickname",class: "col-lg-4 form-control" %>
      </div>

      <div class="form_group row mt-3">
        <%= f.label :telephone_number,"電話番号", class: "col-lg-4" %>
        <%= f.text_field :telephone_number, autocomplete: "telephone_number",placeholder: "09099994838", class: "col-lg-4 form-control" %>
      </div>

      <div class="form_group row mt-3">
        <%= f.label :email, "メールアドレス", class: "col-lg-4" %>
        <%= f.email_field :email, autocomplete: "email", class: "col-lg-4 form-control" %>
      </div>

      <div class="form_group row mt-3">
        <div class="col-lg-4">
          <%= f.label :password, "パスワード" %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password",placeholder: "6文字以上", class: "col-lg-4 form-control" %>
      </div>

      <div class="form_group row mt-3">
        <%= f.label :password_confirmation, "パスワード(確認)", class: "col-lg-4" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-4 form-control" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "登録", class: "form-control btn btn-outline-dark" %>
      </div>
    <% end %>
  </div>

    <p class="mt-3 text-center">すでに登録済みの方は
       <%= link_to "こちら",new_customer_session_path %>　からログインしてください</p>
</div>
