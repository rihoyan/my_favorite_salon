<div class="container">
  <h3 class="title my-4 text-center">＼　　　ログイン　　　／</h3>

  <div class="form mx-auto" style="width: 600px;">
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

    <div class="form_group row">
      <%= f.label :telephone_number, "電話番号", class: "col-lg-4" %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",placeholder: "09099994838",class: "form-control col-lg-8" %>
    </div>

    <div class="form_group row mt-4">
      <%= f.label :password, "パスワード", class: "col-lg-4" %><br />
      <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワードは6桁以上です", class: "form-control col-lg-8" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form_group row mx-auto">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,"パスワードを保存する" %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit "ログイン",class: "btn btn-outline-dark form-control" %>
    </div>
    <p class="mt-3 text-center">登録がまだの方は<%= link_to "こちら", new_customer_registration_path %>から登録してください</p>

<% end %>
</div>
