<div class="container">
  <div class="row my-4">
    <h3>| スタイリング登録</h3>
  </div>

  <div class="row">
    <table class="table">
      <tr>
        <th>日時</th>
        <td><%= @reservation.day.strftime('%Y/%m/%d') %> <%= @reservation.start_time.strftime('%H:%M')%>〜</td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @reservation.customer.last_name %><%= @reservation.customer.first_name %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @reservation.telephone_number %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <%= form_with model: @order_detail, url: salons_order_details_path, local: true do |f| %>
      <table class="table">
        <tr>
          <th style="width: 30%">本日の仕上がり</th>
          <td><%= f.attachment_field :styling_image %></td>
        </tr>
        <tr>
          <th style="width: 30%">担当美容師</th>
          <td><%= f.text_field :stylist_name, class: "form-control"%></td>
        </tr>
        <tr>
          <th>コメント</th>
          <td><%= f.text_area :comment, class: "form-control", size: "30x8"%></td>
        </tr>
        <tr>
          <th>メニュー</th>
          <th>メニュー名</th>
        </tr>
        <% @menus.each do |menu| %>
          <tr>
            <td style="width: 20%"><%= f.radio_button(:menu_id, menu.id) %></td>
            <td style="width: 80%"><%= menu.name %></td>
          </tr>
        <% end %>
        <tr>
          <th></th>
          <td><%= f.submit "登録", class: "btn btn-dark" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>