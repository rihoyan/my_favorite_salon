<div class="container">
  <h3 class="title my-4 text-center">＼　　　パスワード変更　　　／</h3>

  <div class="form mx-auto" style="width: 700px;">
  <%= form_with model: @salon, url: uppass_customer_registration_path, local: true do |f| %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="orm_group row mt-3">
      <%= f.label :current_password, "現在のパスワード", class: "col-lg-4" %>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "変更するには現在のパスワードが必要です", class: "col-lg-8 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :password, "パスワード", class: "col-lg-4" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上 ※変更しない場合は空白にしてください", class: "col-lg-8 form-control" %>
    </div>

     <div class="form_group row mt-3">
      <%= f.label :password_confirmation, "パスワード(確認)", class: "col-lg-4" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-8 form-control" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "更新", class: "form-control btn btn-outline-dark" %>
    </div>
  <% end %>

</div>