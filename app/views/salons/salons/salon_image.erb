<div class="container">
  <div class="row mt-3">
    <div class="col-lg-5">
      <%= attachment_image_tag @salon, :salon_image, size:"300x300", fallback: "logo.png" %>
    </div>
    <div class="col-lg-5">
      <%= form_with model: @salon, url: salons_salons_path, local: true do |f| %>
        <div class="form_group row mt-3">
          <%= f.attachment_field :salon_image %>
          <%= f.submit "登録", class: "btn btn-outline-dark" %>
         </div>
      <% end %>
    </div>
  </div>
</div>