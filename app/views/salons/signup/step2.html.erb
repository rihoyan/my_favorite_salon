<div class="container">
  <h3 class="title my-4 text-center">店舗情報登録</h3>

  <div class="form mx-auto" style="width: 700px;">
    <%= form_with model: @salon, url: step3_salons_signup_index_path,method: :get, local: true do |f| %>
    <!--= render "devise/shared/error_messages", resource: resource %>-->

    <div class="form_group row mt-3">
      <%= f.label :staff_name, "責任者名", class: "col-lg-4" %>
      <%= f.text_field :staff_name, autofocus: true, autocomplete: "staff_name",class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :start_time,"営業開始時間", class: "col-lg-4" %>
      <%= f.time_field :start_time, autocomplete: "start_time", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :end_time,"営業終了時間", class: "col-lg-4" %>
      <%= f.time_field :end_time, autocomplete: "end_time", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :seats,"シート数", class: "col-lg-4" %>
      <%= f.number_field :seats, autocomplete: "seats", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :stylists,"スタイリスト数", class: "col-lg-4" %>
      <%= f.number_field :stylists, autocomplete: "stylists", class: "col-lg-4 form-control" %>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :introduction,"店舗説明", class: "col-lg-4" %>
      <%= f.text_area :introduction, autocomplete: "introduction", class: "col-lg-4 form-control" %>
    </div>

    <div class="actions mt-3">
        <%= f.submit "次へ進む", class: "form-control btn btn-outline-dark" %>
    </div>
    <% end %>
  </div>
</div>